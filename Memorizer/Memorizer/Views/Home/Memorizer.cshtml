@{
    ViewBag.Title = "Memorizer";
}

<h2>Memorizer</h2>
<button class="left card-nav" id="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
</button>
<div id="card" class="card">
    <div class="front vcenter btn-warning">
        Front content
    </div>
    <div class="back vcenter btn-success">
        Back content
    </div>
</div>
<button class="right card-nav" id="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
</button>
<input type="hidden" id="index" value="0" />

@section Scripts {
<script src="https://cdn.rawgit.com/nnattawat/flip/v1.1.2/dist/jquery.flip.min.js"></script>
<script>
    var allItems = [];
    $(document).ready(function () {
        getAllItems();
    });

    function getAllItems() {
        return $.get('/Home/GetAllItems', function (data) {
            $.each($.parseJSON(data), function (index, item) {
                allItems.push(item);
            });
            createCard();
        });
    }

    $('#prev').click(function () {
        $("#card").flip(false);
        var index = $('#index').val();
        if (index > 0) {
            setTimeout(function () {
                goToItem(-1);
            }, 500);
        }
    });

    $('#next').click(function () {
        $("#card").flip(false);
        var index = $('#index').val();
        if (index < allItems.length -1) {
            setTimeout(function () {
                goToItem(1);
            }, 500);
        }
    });

    function goToItem(i) {
        var index = $('#index').val();
        $('#index').val(parseInt(index) + i);
        createCard(parseInt(index) + i);
        $('#prev').invisible();
        $('#next').invisible();
    }

    function createCard() {
        var index = $('#index').val();
        $("#card").flip();
        $('.front').text(allItems[index]["Key"]);
        $('.back').text(allItems[index]["Value"]);
    }

    $("#card").on('flip:done', function () {
        $('#prev').visible();
        $('#next').visible();
    });

    jQuery.fn.visible = function () {
        return this.css('visibility', 'visible');
    };

    jQuery.fn.invisible = function () {
        return this.css('visibility', 'hidden');
    };

</script>
}

